<!DOCTYPE html>
<html>
<head>
	<title><%= serverData.name %> Tag Reaction - AwesomeBot Admin Console</title>
	<% include ../partials/head %>

	<script src="/js/form-change-listener.js"></script>
	<script>
	function newReaction() {
		var newReactionMessage = $("#new-reaction-message");
		if(newReactionMessage.val()) {
			newReactionMessage.removeClass("is-danger");
		} else {
			newReactionMessage.addClass("is-danger");
		}

		if(newReactionMessage.val()) {
			$.ajax({
				type: "POST",
				url: "/uc-submit?svrid=<%= serverData.id %>&path=<%= currentPage %>",
				data: {
					"new-message": newReactionMessage.val()
				},
				success: function() {
					saveFormState();
					$("#form").submit();
				}
			});
		}
	}
	</script>
</head>
<body onload="loadBackground();saveFormState();">
	<% include ../partials/admin-header %>
		
	<section class="section is-white">
		<div class="container">
			<div class="columns">
				<div class="column is-one-quarter">
					<% include ../partials/admin-menu %>
				</div>
				<div class="column">
					<h1 class="title">
						AwesomeBot Tag Reaction
					</h1>
					<div class="container">
						<article class="message is-primary">
							<div class="message-body">
								This is what happens when <strong>AwesomeBot is @mentioned</strong> in chat. You can disable the response altogether or create a list of possible responses that will be chosen from randomly.
							</div>
						</article>
					</div>
					<br>
					<div class="container">
						<form id="form" action="/uc-submit?svrid=<%= serverData.id %>&path=<%= currentPage %>" method="post">
							<div class="content">
								<p class="control">
									<label class="checkbox">
									<input name="isEnabled" type="checkbox" <%= configData.tag_reaction.isEnabled ? "checked" : "" %>>
										Repond when tagged in chat
									</label>
								</p>
								<ul>
									<% for(var i=0; i<configData.tag_reaction.messages; i++) { %>
										<li>
											<%= configData.tag_reaction.messages[i].replace("@user", "<strong>@user</strong>") %>
											<button class="button is-small is-danger" name="tag_reaction-<%= i %>-removed">
												<span>Remove</span>
												<span class="icon is-small">
													<i class="fa fa-times"></i>
												</span>
											</button>
										</li>
									<% } %>
								</ul>
							</div>
							<div class="control is-horizontal">
								<div class="control is-grouped">
									<p class="control is-expanded">
										<input id="new-reaction-message" class="input" type="text" maxlength="2000" placeholder="Response message">
										<span class="help">Type <code>@user</code> for a user mention.</span>
									</p>
									<p class="control">
										<a class="button is-primary" onclick="newReaction();">
											<span class="icon">
										        <i class="fa fa-plus"></i>
										    </span>
										    <span>Add</span>
										</a>
									</p>
								</div>
							</div>
							<br>
							<% include ../partials/form-buttons %>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<% include ../partials/footer %>
</body>
</html>